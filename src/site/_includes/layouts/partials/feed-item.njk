<div class='ui-feed-item'>
    <a class='ui-feed-item__og-image' href='{{ feedItem.url }}'>
        {% if feedItem.image %}
            {% image feedItem.image.url, '기사의 아이캐치 그림', page.url | relativeUrl %}
        {% else %}
            <img src='{{ page.url | relativeUrl }}images/alternate-feed-image.png' loading="lazy" decoding='async' alt='記事のアイキャッチ画像' width='256' height='256'>
        {% endif %}
    </a>
    <div class='ui-feed-item__content'>
        <a class='ui-feed-item__title' href='{{ feedItem.url }}'>{{ feedItem._custom.originalTitle }}</a>
        {% if feedItem._custom.hatenaCount > 0 %}
            <div class='ui-feed-item__hatena-count' title='블로그 개수'>
                <img src='{{ page.url | relativeUrl }}images/hatenabookmark-icon.png' alt='はてなブックマークアイコン' loading="lazy" decoding='async' width='96' height='96'>
                <span>{{ feedItem._custom.hatenaCount }}</span>
            </div>
        {% endif %}
        <a class='ui-feed-item__blog-title ui-feed-item__blog-title--link' href='{{ page.url | relativeUrl }}blogs/{{ feedItem._custom.blogLinkMd5Hash }}'>{{ feedItem._custom.blogTitle }}</a>
        {% if feedItem.content_html %}
            <div class='ui-feed-item__summary'>{{ feedItem.content_html | truncate(500, true, "...") }}</div>
        {% endif %}
        <div class='ui-feed-item__date' title='{{ feedItem.pubDateForHuman }}'>{{ feedItem.diffDateForHuman }}</div>
    </div>
</div>
